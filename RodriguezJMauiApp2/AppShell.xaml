<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RodriguezJMauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RodriguezJMauiApp2"
    Shell.FlyoutBehavior="Disabled"
    Title="Mis Apuntes - Rodriguez">

    <TabBar>
        <Tab Title="Apuntes" Icon="edit.png">
            <ShellContent
                Title="Mis Apuntes"
                ContentTemplate="{DataTemplate local:Demo}"
                Route="Demo" />
        </Tab>

        <Tab Title="Inicio" Icon="home.png">
            <ShellContent
                Title="Inicio"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab Title="Acerca de" Icon="info.png">
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate local:AboutPage}"
                Route="AboutPage" />
        </Tab>
    </TabBar>
</Shell>
